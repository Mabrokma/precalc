                    xtick={1,2,3},
                    ytick={0.5,1,1.5},
                    xlabel={<m>t</m>},
                    axis line style=-&gt;,
                    grid=both,
                    ]
                    \addplot+[-&gt;]expression[domain=0:4]{exp(.08*x)};
